<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Enable detailed errors while debugging. Set mode="Off" only for troubleshooting and
       remember to change to RemoteOnly or On in production. -->
  <system.web>
    <customErrors mode="Off" />
  </system.web>

  <system.webServer>
    <!-- Default document (will be used by IIS for static requests) -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Route dynamic requests to app.js via iisnode, but let static folders be served directly -->
    <handlers>
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Ensure requests to the site root (/) redirect to /index.html so users and proxies resolve correctly -->
        <rule name="RootRedirectToIndex" stopProcessing="true">
          <match url="^$" />
          <action type="Redirect" url="/index.html" redirectType="Found" />
        </rule>

        <!-- Allow static content under these folders to be served by IIS directly -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(css|js|images|fonts|Early Learning Family Portal_ Home_files)/(.*)$" ignoreCase="true" />
          <action type="None" />
        </rule>

        <!-- All other requests that are not an existing file or directory go to Node (app.js) -->
        <rule name="DynamicContent" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="app.js" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <httpErrors existingResponse="PassThrough" />
    <iisnode loggingEnabled="true" />
  </system.webServer>
</configuration>